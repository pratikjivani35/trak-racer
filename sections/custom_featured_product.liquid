<style>
  #shopify-section-{{ section.id }} {
    --product-grid: auto / minmax(0, 1fr);
    --product-gallery-media-list-grid: auto / auto-flow 100%;
    --product-gallery-media-list-gap: var(--grid-gutter);
  }

  @media screen and (max-width: 999px) {
    #shopify-section-{{ section.id }} {
      --section-spacing-block-start: var(--container-gutter);
    }
  }

  @media screen and (min-width: 1000px) {
    #shopify-section-{{ section.id }} {
    {%- assign media_ratio = section.settings.desktop_media_width | divided_by: 50.0 -%}
      --product-grid: auto / minmax(0, {{ media_ratio }}fr) minmax(0, {{ 2.0 | minus: media_ratio }}fr);
      --product-gallery-media-list-grid: auto / auto-flow 100%;
      --product-gallery-media-list-gap: calc(var(--grid-gutter) / 2);
    }
  }

  @media screen and (min-width: 1400px) {
    #shopify-section-{{ section.id }} {
      --product-gallery-media-list-gap: var(--grid-gutter);
    }
  }
</style>

<div {% render 'section-properties', tight: true %}>
  <div class="product_data">
    <div class="product_gallery">
      {%- for block in section.blocks -%}
        {%- if block.settings.product_image -%}
          {% assign image_url = block.settings.product_image | img_url: 'original' %}
          <img
            class="product_img_item img_{{ forloop.index }}"
            src="{{ image_url }}"
            alt="{{ block.settings.product_image.alt | escape }}"
          >
        {%- else -%}
          <img
            class="product_img_item img_{{ forloop.index }}"
            src="https://via.placeholder.com/600x600/e9e9e9"
            alt="Dummy Image"
          >
        {%- endif -%}
      {%- endfor -%}
    </div>

    <div class="product_info">
      <h2 class="product_info__subtitle">{{ section.settings.product_subtitle }}</h2>
      <h2 class="product_info__title">{{ section.settings.product_title }}</h2>
      <div class="product_info__price">{{ section.settings.product_price }}</div>
      <div class="product_info__description">{{ section.settings.product_description }}</div>
      <div class="product_info__buttons">
        <a href="{{ section.settings.button_link }}" class="product_btn border_gradient">
          {{- section.settings.button_text -}}
        </a>
        <a class="video-play-button magnific_video_popup" href="{{ section.settings.video_link }}">
          <svg
            role="presentation"
            fill="none"
            focusable="false"
            width="48"
            height="48"
            class="icon icon-play-button"
            viewBox="0 0 48 48"
          >
            <path fill-rule="evenodd" clip-rule="evenodd" d="M24 48C10.745 48 0 37.255 0 24S10.745 0 24 0s24 10.745 24 24-10.745 24-24 24Zm-3-19.15a.3.3 0 0 0 .462.253l7.545-4.85a.3.3 0 0 0 0-.505l-7.545-4.85a.3.3 0 0 0-.462.252v9.7Z" fill="currentColor"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Featured product",
  "class": "custom_featured_product",
  "tag": "section",
  "disabled_on": {
    "templates": ["password"],
    "groups": ["header", "footer"]
  },
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": true
    },
    {
      "type": "header",
      "content": "Product Content"
    },
    {
      "type": "text",
      "id": "product_subtitle",
      "label": "Product Subtitle"
    },
    {
      "type": "text",
      "id": "product_title",
      "label": "Product Title"
    },
    {
      "type": "text",
      "id": "product_price",
      "label": "Product Price"
    },
    {
      "type": "text",
      "id": "product_description",
      "label": "Product Description"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Button"
    },
    {
      "type": "video_url",
      "id": "video_link",
      "label": "Video URL",
      "accept": ["youtube"],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
      "info": "Accept YouTube link only"
    },
    {
      "type": "range",
      "id": "desktop_media_width",
      "label": "Desktop media size",
      "min": 35,
      "max": 65,
      "step": 5,
      "unit": "%",
      "default": 55
    },
    {
      "type": "header",
      "content": "Colors",
      "info": "Gradient replaces solid colors when set."
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background"
    },
    {
      "type": "color_background",
      "id": "background_gradient",
      "label": "Background gradient"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text"
    }
  ],
  "presets": [
    {
      "name": "Custom Featured product"
    }
  ]
}
{% endschema %}

<script>
  // $(document).on('ready', function () {
  $(".custom_featured_product .product_data .product_gallery").slick({
    infinite: false,
    slidesToShow: 1,
    slidesToScroll: 1,
    dots: true,
    arrows: false,
  });
  // });

  jQuery(document).ready(function () {
    $(".magnific_video_popup").magnificPopup({
      type: "iframe",
      closeOnBgClick: false,
      iframe: {
        markup:
          '<div class="mfp-iframe-scaler">' +
          '<div class="mfp-close"></div>' +
          '<iframe class="mfp-iframe" frameborder="0" allowfullscreen></iframe>' +
          '<div class="mfp-title">Some caption</div>' +
          "</div>",
      },
      callbacks: {
        markupParse: function (template, values, item) {
          values.title = item.el.attr("title");
        },
      },
      removalDelay: 300,
      mainClass: "mfp-fade",
    });
  });
</script>
